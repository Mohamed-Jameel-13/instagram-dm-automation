generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String       @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  accounts      Account[]
  automations   Automation[]
  followers     Follower[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Automation {
  id           String   @id @default(cuid())
  name         String
  active       Boolean  @default(false)
  triggerType  String
  keywords     String
  actionType   String
  message      String?
  commentReply String?
  aiPrompt     String?
  posts        String
  dmMode       String   @default("normal")
  userId       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Follower {
  id               String    @id @default(cuid())
  userId           String
  followerId       String
  followerUsername String?
  isNew            Boolean   @default(true)
  followedAt       DateTime  @default(now())
  lastCommentAt    DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, followerId])
}

model AutomationLog {
  id            String   @id @default(cuid())
  automationId  String
  triggerType   String
  triggerText   String
  userId        String
  username      String?
  isNewFollower Boolean?
  triggeredAt   DateTime @default(now())
  createdAt     DateTime @default(now())
  
  // Enhanced analytics fields
  postId        String?   // Instagram post ID if comment trigger
  commentId     String?   // Instagram comment ID if comment trigger
  processingTimeMs Int?   // Time taken to process and send response
  responseStatus String?  // success, failed, rate_limited, etc.
  errorMessage  String?   // Error details if failed
  responseType  String?   // dm, comment_reply, ai_dm, etc.
  
  @@index([automationId, triggeredAt])
  @@index([postId, triggeredAt])
  @@index([triggerType, triggeredAt])
  @@index([userId, triggeredAt])
}

model TrackedUser {
  id              String   @id @default(cuid())
  userId          String
  instagramUserId String
  status          String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([userId, instagramUserId])
}

model ConversationSession {
  id                  String   @id @default(cuid())
  userId              String
  instagramUserId     String
  automationId        String
  isActive            Boolean  @default(true)
  conversationHistory String?
  lastActivityAt      DateTime @default(now())
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@unique([userId, instagramUserId, automationId])
}

model ProcessedWebhook {
  id          String   @id @default(cuid())
  eventId     String   @unique
  requestId   String
  webhookBody String?
  processedAt DateTime @default(now())
  result      String?
  createdAt   DateTime @default(now())

  @@index([eventId])
  @@index([processedAt])
}

// New analytics models
model DmAnalytics {
  id               String   @id @default(cuid())
  automationId     String
  userId           String   // Owner of the automation
  recipientId      String   // Instagram user who received DM
  triggerType      String   // dm, ai_dm, comment, follow_comment
  triggerSource    String?  // postId if triggered by comment
  messageLength    Int
  responseTimeMs   Int      // Time from trigger to DM sent
  status           String   // sent, failed, rate_limited
  errorCode        String?
  aiPrompt         String?  // AI prompt used if triggerType is 'ai_dm'
  sentAt           DateTime @default(now())
  
  @@index([automationId, sentAt])
  @@index([triggerSource, sentAt])
  @@index([userId, sentAt])
}

model PostAnalytics {
  id               String   @id @default(cuid())
  postId           String   @unique
  userId           String   // Owner of the automation
  totalComments    Int      @default(0)
  dmsSent          Int      @default(0)
  aiDmsSent        Int      @default(0)  // Track AI DMs separately
  commentsReplied  Int      @default(0)
  uniqueUsers      Int      @default(0)
  avgResponseTime  Float?   // Average response time in milliseconds
  postThumbnail    String?  // Instagram post thumbnail URL
  postCaption      String?  // First 100 chars of post caption
  postType         String?  // IMAGE, VIDEO, CAROUSEL_ALBUM, REELS
  lastActivity     DateTime @default(now())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  @@index([userId, lastActivity])
  @@index([postId])
}

model PerformanceMetrics {
  id               String   @id @default(cuid())
  userId           String
  date             DateTime // Date for daily aggregation
  totalTriggers    Int      @default(0)
  successfulDms    Int      @default(0)
  failedDms        Int      @default(0)
  avgResponseTime  Float    @default(0)
  fastestResponse  Int?     // Fastest response in ms
  slowestResponse  Int?     // Slowest response in ms
  uniqueRecipients Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  @@unique([userId, date])
  @@index([userId, date])
}
